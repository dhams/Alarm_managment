<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg_org"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_reg_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reg_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logoimagivew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@drawable/head_logo" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
 			
 			
 			
           <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
            
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:saveEnabled="true"
                    android:id="@+id/regimagivew"
                     android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="left"
                      android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/add_photo" />

                <TextView
                    android:id="@+id/tv_reg_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                     android:layout_marginLeft="5dp"
                    android:text="@string/first_name" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_fname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/first_name"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/last_name" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_lname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/last_name"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/user_name" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_uname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/user_name"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/password" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/password"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:password="true" >
                </EditText>
                
                     <TextView
                    android:id="@+id/tv_reg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/type" >
                </TextView>

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:paddingLeft="10dp"
                    android:prompt="@string/type_prompt"
                    android:tag="Type" >
                </Spinner>

                <TextView
                    android:id="@+id/tv_reg_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/zip" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_zipcode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/zip"
                    android:inputType="number"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/address" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/address"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/country_prompt" >
                </TextView>
                
                <AutoCompleteTextView
                    android:id="@+id/autocomplete_country"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/country_prompt"
                    android:completionThreshold="1"
                   	android:paddingLeft="5dp" 
                   	android:singleLine="true"
                    android:background="@drawable/input_field_1"
                     />
<!--                 <Spinner -->
<!--                     android:id="@+id/spCountry" -->
<!--                     android:layout_width="fill_parent" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:background="@drawable/spinner_bg_1" -->
<!--                     android:entries="@array/country_arrays" -->
<!--                     android:paddingLeft="10dp" -->
<!--                     android:prompt="@string/country_prompt" > -->
<!--                 </Spinner> -->



                <TextView
                    android:id="@+id/tv_reg_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/state" >
                </TextView>
  					<AutoCompleteTextView
                    android:id="@+id/autocomplete_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/state"
                   	android:paddingLeft="5dp" 
                   	 android:visibility="gone" 
                   	  android:completionThreshold="1"
                    android:background="@drawable/input_field_1"
                     />

<!--                 <Spinner -->
<!--                     android:id="@+id/spStateUS" -->
<!--                     android:layout_width="fill_parent" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:background="@drawable/spinner_bg_1" -->
<!--                     android:entries="@array/state_arrays" -->
<!--                     android:paddingLeft="10dp" -->
<!--                     android:prompt="@string/state_prompt" -->
<!--                     android:visibility="gone" > -->
<!--                 </Spinner> -->


                <EditText
                    android:id="@+id/et_reg_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                    android:hint="@string/state"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <TextView
                    android:id="@+id/tv_reg_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_ass"
                      android:layout_marginLeft="5dp"
                    android:text="@string/city" >
                </TextView>

                <EditText
                    android:id="@+id/et_reg_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_1"
                      android:layout_marginBottom="10dp"
                    android:hint="@string/city"
                    android:singleLine="true"
                    android:paddingLeft="5dp" >
                </EditText>

                <!-- <EditText -->
                <!-- android:id="@+id/et_reg_country" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:background="@drawable/input_field_1" -->
                <!-- android:hint="Country" -->
                <!-- android:paddingLeft="5dp" > -->
                <!-- </EditText> -->

               
            </LinearLayout>
         <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/btnCan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_big_bg"
            android:text="@string/cancel" >
        </Button>

        <Button
            android:id="@+id/btnReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_big_bg"
            android:text="@string/sign_up" >
        </Button>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

    
    

</LinearLayout>