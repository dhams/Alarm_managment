<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainAlarmLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg_org"
    android:orientation="vertical"
    android:weightSum="3.9" >

    <include
        android:id="@+id/headerlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/black"
        android:gravity="center"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tv_userbox_name"
            style="@style/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="2.3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_userbox_boxname"
            style="@style/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.7"
            android:singleLine="true"
            android:text="Box 3"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_boxthree_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/red_button_bg"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/confirm"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3.6"
        android:background="@drawable/square_border"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/rl_three_boxA"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_three_timeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/img_three_boxA"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_three_boxA"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:background="@drawable/add_photo_medium"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_three_boxA"
                style="@style/font_size_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_three_boxA"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="A/1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/rl_three_boxB"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_three_timeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/img_three_boxB"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_three_boxB"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:background="@drawable/add_photo_medium"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_three_boxB"
                style="@style/font_size_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_three_boxB"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="B/1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/rl_three_boxC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_three_timeC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/img_three_boxC"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_three_boxC"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:background="@drawable/add_photo_medium"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_three_boxC"
                style="@style/font_size_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_three_boxC"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="C/1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>